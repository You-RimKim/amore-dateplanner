<div id="email-form">

  <form action="/login" method="POST">

    <label> Email
      <input type="email" name="email" placeholder="plan@yournextdate.here" />
    </label>

    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Login</button>

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>