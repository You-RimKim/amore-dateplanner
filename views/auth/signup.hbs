<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="sweetheart" />
    </label>

    <label> Email
      <input type="email" name="email" placeholder="plan@yournextdate.here" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" />
    </labels>

    <button type="submit">Create account</button>

